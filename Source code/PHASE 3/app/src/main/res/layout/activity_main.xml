<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EEF8"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Women Safety App"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#86E84B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/unifyimg"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/secd" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_weight="0.17"
                android:text="It is dangerous to go out at night, particularly if you're a woman in today's environment, itâ€™s long past time for women to stop travelling alone, because they can't defend themselves as well as males can. In order to lessen the likelihood of being a victim of violent crime we need something that can help them in difficult times. Women can use this application to protect themselves in the time of danger and this application lets the user to not only alert the emergency contact but also to share the location  to let the other person track the user."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="14sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Your Password"
                android:layout_marginTop="10dp"
                android:inputType="textPassword" />
            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signin"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="#ffffff"
                android:backgroundTint="#DC7633"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Create Account?"
                android:textAlignment="center"
                android:textColor="#9400D3"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>